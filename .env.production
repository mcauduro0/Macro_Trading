# =============================================================================
# Macro Trading System — Production Environment Variables
# =============================================================================
# IMPORTANT: Copy this to .env and fill in ALL values before deploying.
#   cp .env.production .env
#   nano .env
# =============================================================================

# ── TimescaleDB ──────────────────────────────────────────────────────────────
POSTGRES_HOST=timescaledb
POSTGRES_PORT=5432
POSTGRES_DB=macro_trading
POSTGRES_USER=macro_user
POSTGRES_PASSWORD=CHANGE_ME_USE_openssl_rand_hex_32

# ── Redis ────────────────────────────────────────────────────────────────────
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=CHANGE_ME_USE_openssl_rand_hex_32

# ── MongoDB ──────────────────────────────────────────────────────────────────
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGO_USER=macro_user
MONGO_PASSWORD=CHANGE_ME_USE_openssl_rand_hex_32
MONGO_DB=macro_trading

# ── MinIO (S3-compatible object storage) ────────────────────────────────────
MINIO_HOST=minio
MINIO_PORT=9000
MINIO_ACCESS_KEY=minio_admin
MINIO_SECRET_KEY=CHANGE_ME_USE_openssl_rand_hex_32
MINIO_BUCKET=macro-data

# ── Kafka ────────────────────────────────────────────────────────────────────
KAFKA_BOOTSTRAP_SERVERS=kafka:9092

# ── JWT Authentication ───────────────────────────────────────────────────────
# Generate with: python3 -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=CHANGE_ME_GENERATE_64_CHAR_HEX
JWT_ALGORITHM=HS256
JWT_EXPIRY_MINUTES=60

# ── API Keys (Data Providers) ───────────────────────────────────────────────
# FRED (Federal Reserve): https://fred.stlouisfed.org/docs/api/api_key.html
FRED_API_KEY=

# Financial Modeling Prep: https://financialmodelingprep.com/developer
FMP_API_KEY=

# Trading Economics: https://tradingeconomics.com/api
TE_API_KEY=

# ANBIMA Data API: https://dados.anbima.com.br
ANBIMA_CLIENT_ID=
ANBIMA_CLIENT_SECRET=

# ── LLM API Keys (for agent analysis) ───────────────────────────────────────
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# ── Dagster ──────────────────────────────────────────────────────────────────
DATABASE_URL=postgresql://macro_user:CHANGE_ME_USE_openssl_rand_hex_32@timescaledb:5432/macro_trading
DAGSTER_HOME=/app/.dagster

# ── Grafana ──────────────────────────────────────────────────────────────────
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=CHANGE_ME

# ── Application Settings ────────────────────────────────────────────────────
# Set to false in production to enforce JWT authentication
DEBUG=false
LOG_LEVEL=INFO
