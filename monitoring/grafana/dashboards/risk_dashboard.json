  "panels": [
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "id": 100,
      "title": "VaR Gauges",
      "type": "row"
    },
    {
      "id": 1,
      "title": "VaR 95% (1D)",
      "description": "1-day Value at Risk at 95% confidence level",
      "type": "gauge",
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 1 },
      "datasource": { "type": "postgres", "uid": "timescaledb" },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "postgres", "uid": "timescaledb" },
          "rawSql": "SELECT var_95_pct AS \"VaR 95%\"\nFROM risk_metrics_daily\nWHERE computed_at = (SELECT MAX(computed_at) FROM risk_metrics_daily)",
          "format": "table",
          "editorMode": "code"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 2 },
              { "color": "red", "value": 5 }
            ]
          },
          "min": 0,
          "max": 10,
          "unit": "percent",
          "decimals": 2
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "values": false, "calcs": ["lastNotNull"], "fields": "" },
        "orientation": "auto",
        "showThresholdLabels": true,
        "showThresholdMarkers": true,
        "sizing": "auto"
      }
    },
    {
      "id": 2,
