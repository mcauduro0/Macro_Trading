    {
      "id": 4,
      "title": "Max Drawdown",
      "description": "Current drawdown from portfolio peak",
      "type": "gauge",
      "gridPos": { "h": 6, "w": 6, "x": 18, "y": 1 },
      "datasource": { "type": "postgres", "uid": "timescaledb" },
      "targets": [
        {
