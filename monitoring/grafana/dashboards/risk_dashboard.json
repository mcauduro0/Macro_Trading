  "id": null,
  "uid": "risk-dashboard",
  "title": "Risk Dashboard",
  "description": "Monitor portfolio risk metrics, VaR, stress tests, and limit utilization",
  "tags": ["macro-trading", "risk", "monitoring"],
  "style": "dark",
  "timezone": "browser",
  "editable": true,
  "graphTooltip": 1,
  "fiscalYearStartMonth": 0,
  "liveNow": false,
  "refresh": "15m",
  "schemaVersion": 39,
