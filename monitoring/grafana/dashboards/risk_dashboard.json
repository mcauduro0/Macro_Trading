    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 7 },
      "id": 101,
      "title": "Stress Test Results",
      "type": "row"
    },
    {
      "id": 5,
      "title": "Stress Scenario P&L Impact",
      "description": "Portfolio P&L impact under each stress scenario",
      "type": "barchart",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 8 },
      "datasource": { "type": "postgres", "uid": "timescaledb" },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "postgres", "uid": "timescaledb" },
          "rawSql": "SELECT scenario_name AS \"Scenario\", portfolio_pnl_pct AS \"P&L Impact (%)\"\nFROM stress_test_results\nWHERE run_date = (SELECT MAX(run_date) FROM stress_test_results)\nORDER BY portfolio_pnl_pct ASC",
          "format": "table",
          "editorMode": "code"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": -2 },
              { "color": "green", "value": 0 }
            ]
          },
          "unit": "percent",
          "decimals": 2,
          "custom": {
            "axisCenteredZero": true,
            "fillOpacity": 80,
            "gradientMode": "scheme",
            "lineWidth": 1,
            "barAlignment": 0,
            "showPoints": "never",
            "stacking": { "mode": "none", "group": "A" },
            "axisPlacement": "auto",
            "axisLabel": "P&L Impact (%)",
            "hideFrom": { "tooltip": false, "viz": false, "legend": false },
            "thresholdsStyle": { "mode": "off" }
          }
        },
        "overrides": []
      },
      "options": {
        "orientation": "horizontal",
        "barWidth": 0.8,
        "groupWidth": 0.7,
        "xTickLabelRotation": 0,
        "xTickLabelSpacing": 0,
        "showValue": "auto",
        "stacking": "none",
        "legend": { "displayMode": "list", "placement": "bottom", "showValues": "auto", "calcs": [] },
        "tooltip": { "mode": "single", "sort": "none" },
        "fullHighlight": false
      }
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 16 },
      "id": 102,
      "title": "Limit Utilization",
      "type": "row"
    },
    {
      "id": 6,
      "title": "Risk Limit Utilization",
      "description": "Current utilization of risk limits as percentage of allowed maximum",
      "type": "bargauge",
      "gridPos": { "h": 6, "w": 24, "x": 0, "y": 17 },
      "datasource": { "type": "postgres", "uid": "timescaledb" },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "postgres", "uid": "timescaledb" },
          "rawSql": "SELECT limit_name AS \"Limit\", utilization_pct AS \"Utilization\"\nFROM risk_limits_status\nWHERE checked_at = (SELECT MAX(checked_at) FROM risk_limits_status)\nORDER BY utilization_pct DESC",
          "format": "table",
          "editorMode": "code"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 60 },
              { "color": "red", "value": 80 }
            ]
          },
          "min": 0,
          "max": 100,
          "unit": "percent",
          "decimals": 1
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "values": true, "calcs": [], "fields": "/^Utilization$/" },
        "orientation": "horizontal",
        "displayMode": "gradient",
        "showUnfilled": true,
        "valueMode": "color",
        "namePlacement": "auto",
        "sizing": "auto",
        "minVizWidth": 8,
        "minVizHeight": 16
      }
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 23 },
      "id": 103,
      "title": "VaR History",
      "type": "row"
    },
    {
      "id": 7,
      "title": "VaR Evolution Over Time",
      "description": "Historical VaR 95% and 99% trend",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 24 },
      "datasource": { "type": "postgres", "uid": "timescaledb" },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "postgres", "uid": "timescaledb" },
          "rawSql": "SELECT computed_at AS time, var_95_pct AS \"VaR 95%\", var_99_pct AS \"VaR 99%\"\nFROM risk_metrics_daily\nWHERE $__timeFilter(computed_at)\nORDER BY computed_at",
          "format": "table",
          "editorMode": "code"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "barAlignment": 0,
            "lineWidth": 2,
            "fillOpacity": 15,
            "gradientMode": "scheme",
            "spanNulls": false,
            "insertNulls": false,
            "showPoints": "auto",
            "pointSize": 5,
            "stacking": { "mode": "none", "group": "A" },
            "axisPlacement": "auto",
            "axisLabel": "",
            "scaleDistribution": { "type": "linear" },
            "hideFrom": { "tooltip": false, "viz": false, "legend": false },
            "thresholdsStyle": { "mode": "line+area" }
          },
          "color": { "mode": "palette-classic" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "transparent", "value": null },
              { "color": "red", "value": 5 }
            ]
          },
          "unit": "percent",
          "decimals": 2
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "VaR 95%" },
            "properties": [
              { "id": "color", "value": { "fixedColor": "yellow", "mode": "fixed" } }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "VaR 99%" },
            "properties": [
              { "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }
            ]
          }
        ]
      },
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "list", "placement": "bottom", "showValues": "auto", "calcs": ["lastNotNull", "max"] }
      }
    }
