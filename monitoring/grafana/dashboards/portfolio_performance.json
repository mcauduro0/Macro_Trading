{
  "__inputs": [
    {
      "name": "DS_TIMESCALEDB",
      "label": "TimescaleDB",
      "description": "",
      "type": "datasource",
      "pluginId": "postgres",
      "pluginName": "PostgreSQL"
    }
  ],
  "__elements": {},
  "__requires": [
    {
      "type": "grafana",
      "id": "grafana",
      "name": "Grafana",
      "version": "11.4.0"
    },
    {
      "type": "datasource",
      "id": "postgres",
      "name": "PostgreSQL",
      "version": "1.0.0"
    },
    {
      "type": "panel",
      "id": "stat",
      "name": "Stat",
      "version": ""
    },
    {
      "type": "panel",
      "id": "timeseries",
      "name": "Time series",
      "version": ""
    },
    {
      "type": "panel",
      "id": "piechart",
      "name": "Pie chart",
      "version": ""
    },
    {
      "type": "panel",
      "id": "heatmap",
      "name": "Heatmap",
      "version": ""
    }
  ],
  "id": null,
  "uid": "portfolio-performance",
  "title": "Portfolio Performance",
  "description": "Track portfolio equity, returns, attribution, and allocation over time",
  "tags": ["macro-trading", "portfolio", "performance"],
  "style": "dark",
  "timezone": "browser",
  "editable": true,
  "graphTooltip": 1,
  "fiscalYearStartMonth": 0,
  "liveNow": false,
  "refresh": "15m",
  "schemaVersion": 39,
  "time": {
    "from": "now-7d",
    "to": "now"
  },
  "timepicker": {},
  "templating": {
    "list": []
  },
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {
          "type": "grafana",
          "uid": "-- Grafana --"
        },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "panels": [
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "id": 100,
      "title": "Portfolio Summary",
      "type": "row"
    },
    {
      "id": 1,
      "title": "Total Return",
      "description": "Cumulative return since inception",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 1 },
      "datasource": { "type": "postgres", "uid": "timescaledb" },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "postgres", "uid": "timescaledb" },
          "rawSql": "SELECT\n  ((last_val.total_equity / first_val.total_equity) - 1) * 100 AS \"Total Return\"\nFROM\n  (SELECT total_equity FROM portfolio_state ORDER BY timestamp ASC LIMIT 1) AS first_val,\n  (SELECT total_equity FROM portfolio_state ORDER BY timestamp DESC LIMIT 1) AS last_val",
          "format": "table",
          "editorMode": "code"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 0 },
              { "color": "green", "value": 5 }
            ]
          },
          "unit": "percent",
          "decimals": 2
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "values": false, "calcs": ["lastNotNull"], "fields": "" },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto"
      }
    },
    {
      "id": 2,
      "title": "Sharpe Ratio",
      "description": "Rolling 252-day annualized Sharpe ratio",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 1 },
      "datasource": { "type": "postgres", "uid": "timescaledb" },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "postgres", "uid": "timescaledb" },
          "rawSql": "WITH daily_returns AS (\n  SELECT timestamp,\n    (total_equity / LAG(total_equity) OVER (ORDER BY timestamp) - 1) AS daily_ret\n  FROM portfolio_state\n  ORDER BY timestamp DESC\n  LIMIT 252\n)\nSELECT\n  ROUND((AVG(daily_ret) / NULLIF(STDDEV(daily_ret), 0) * SQRT(252))::numeric, 2) AS \"Sharpe Ratio\"\nFROM daily_returns\nWHERE daily_ret IS NOT NULL",
          "format": "table",
          "editorMode": "code"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 0.5 },
              { "color": "green", "value": 1.0 }
            ]
          },
          "decimals": 2
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "values": false, "calcs": ["lastNotNull"], "fields": "" },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto"
      }
    },
    {
      "id": 3,
      "title": "Current Leverage",
      "description": "Gross leverage ratio",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 1 },
      "datasource": { "type": "postgres", "uid": "timescaledb" },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "postgres", "uid": "timescaledb" },
          "rawSql": "SELECT ROUND(SUM(ABS(weight))::numeric, 2) AS \"Gross Leverage\"\nFROM portfolio_state\nWHERE timestamp = (SELECT MAX(timestamp) FROM portfolio_state)",
          "format": "table",
          "editorMode": "code"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1.5 },
              { "color": "red", "value": 2.0 }
            ]
          },
          "decimals": 2,
          "unit": "short"
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "values": false, "calcs": ["lastNotNull"], "fields": "" },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto"
      }
    },
    {
      "id": 4,
      "title": "Active Positions",
      "description": "Count of non-zero positions",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 1 },
      "datasource": { "type": "postgres", "uid": "timescaledb" },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "postgres", "uid": "timescaledb" },
          "rawSql": "SELECT COUNT(DISTINCT instrument) AS \"Active Positions\"\nFROM portfolio_state\nWHERE timestamp = (SELECT MAX(timestamp) FROM portfolio_state)\n  AND ABS(weight) > 0.001",
          "format": "table",
          "editorMode": "code"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "blue", "value": null }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "values": false, "calcs": ["lastNotNull"], "fields": "" },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto"
      }
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 5 },
      "id": 101,
      "title": "Equity Curve",
      "type": "row"
    },
    {
      "id": 5,
      "title": "Portfolio NAV",
      "description": "Portfolio net asset value evolution over time",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 6 },
      "datasource": { "type": "postgres", "uid": "timescaledb" },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "postgres", "uid": "timescaledb" },
          "rawSql": "SELECT timestamp AS time, total_equity AS \"Portfolio NAV\"\nFROM portfolio_state\nWHERE $__timeFilter(timestamp)\nORDER BY timestamp",
          "format": "table",
          "editorMode": "code"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "barAlignment": 0,
            "lineWidth": 2,
            "fillOpacity": 25,
            "gradientMode": "scheme",
            "spanNulls": false,
            "insertNulls": false,
            "showPoints": "never",
            "pointSize": 5,
            "stacking": { "mode": "none", "group": "A" },
            "axisPlacement": "auto",
            "axisLabel": "",
            "scaleDistribution": { "type": "linear" },
            "hideFrom": { "tooltip": false, "viz": false, "legend": false },
            "thresholdsStyle": { "mode": "off" }
          },
          "color": { "fixedColor": "blue", "mode": "fixed" },
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "green", "value": null }]
          },
          "unit": "currencyBRL",
          "decimals": 0
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "single", "sort": "none" },
        "legend": { "displayMode": "list", "placement": "bottom", "showValues": "auto", "calcs": ["lastNotNull", "min", "max"] }
      }
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 14 },
      "id": 102,
      "title": "Strategy Attribution",
      "type": "row"
    },
    {
      "id": 6,
      "title": "Current Allocation by Strategy",
      "description": "Portfolio weight allocation across strategies",
      "type": "piechart",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 15 },
      "datasource": { "type": "postgres", "uid": "timescaledb" },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "postgres", "uid": "timescaledb" },
          "rawSql": "SELECT strategy_id AS \"Strategy\", SUM(ABS(weight)) AS \"Allocation\"\nFROM portfolio_state\nWHERE timestamp = (SELECT MAX(timestamp) FROM portfolio_state)\nGROUP BY strategy_id\nORDER BY \"Allocation\" DESC",
          "format": "table",
          "editorMode": "code"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "hideFrom": { "tooltip": false, "viz": false, "legend": false } }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "values": true, "calcs": [], "fields": "/^Allocation$/" },
        "pieType": "donut",
        "tooltip": { "mode": "single", "sort": "none" },
        "legend": { "displayMode": "table", "placement": "right", "showValues": "auto", "values": ["percent", "value"] },
        "displayLabels": ["name", "percent"],
        "orientation": "auto"
      }
    },
    {
      "id": 7,
      "title": "Monthly Returns",
      "description": "Monthly portfolio returns over time",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 15 },
      "datasource": { "type": "postgres", "uid": "timescaledb" },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "postgres", "uid": "timescaledb" },
          "rawSql": "SELECT\n  date_trunc('month', timestamp) AS time,\n  (last(total_equity, timestamp) / first(total_equity, timestamp) - 1) * 100 AS \"Monthly Return (%)\"\nFROM portfolio_state\nWHERE $__timeFilter(timestamp)\nGROUP BY date_trunc('month', timestamp)\nORDER BY time",
          "format": "table",
          "editorMode": "code"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "bars",
            "lineInterpolation": "linear",
            "barAlignment": 0,
            "lineWidth": 1,
            "fillOpacity": 80,
            "gradientMode": "scheme",
            "spanNulls": false,
            "insertNulls": false,
            "showPoints": "never",
            "pointSize": 5,
            "stacking": { "mode": "none", "group": "A" },
            "axisPlacement": "auto",
            "axisLabel": "",
            "scaleDistribution": { "type": "linear" },
            "hideFrom": { "tooltip": false, "viz": false, "legend": false },
            "thresholdsStyle": { "mode": "off" }
          },
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 0 }
            ]
          },
          "unit": "percent",
          "decimals": 2
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "single", "sort": "none" },
        "legend": { "displayMode": "list", "placement": "bottom", "showValues": "auto", "calcs": ["sum", "mean"] }
      }
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 23 },
      "id": 103,
      "title": "Asset Class Allocation Over Time",
      "type": "row"
    },
    {
      "id": 8,
      "title": "Asset Class Allocation Over Time",
      "description": "Stacked area showing allocation changes across asset classes",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 24 },
      "datasource": { "type": "postgres", "uid": "timescaledb" },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "postgres", "uid": "timescaledb" },
          "rawSql": "SELECT timestamp AS time,\n  SUM(CASE WHEN instrument LIKE 'DI%' THEN ABS(weight) ELSE 0 END) AS \"Rates\",\n  SUM(CASE WHEN instrument LIKE 'USD%' OR instrument LIKE 'NDF%' THEN ABS(weight) ELSE 0 END) AS \"FX\",\n  SUM(CASE WHEN instrument LIKE 'NTN%' THEN ABS(weight) ELSE 0 END) AS \"Inflation\",\n  SUM(CASE WHEN instrument LIKE 'CDS%' THEN ABS(weight) ELSE 0 END) AS \"Sovereign\"\nFROM portfolio_state\nWHERE $__timeFilter(timestamp)\nGROUP BY timestamp\nORDER BY timestamp",
          "format": "table",
          "editorMode": "code"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "barAlignment": 0,
            "lineWidth": 1,
            "fillOpacity": 50,
            "gradientMode": "opacity",
            "spanNulls": false,
            "insertNulls": false,
            "showPoints": "never",
            "pointSize": 5,
            "stacking": { "mode": "normal", "group": "A" },
            "axisPlacement": "auto",
            "axisLabel": "",
            "scaleDistribution": { "type": "linear" },
            "hideFrom": { "tooltip": false, "viz": false, "legend": false },
            "thresholdsStyle": { "mode": "off" }
          },
          "color": { "mode": "palette-classic" },
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "green", "value": null }]
          },
          "decimals": 2
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Rates" },
            "properties": [{ "id": "color", "value": { "fixedColor": "blue", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "FX" },
            "properties": [{ "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "Inflation" },
            "properties": [{ "id": "color", "value": { "fixedColor": "orange", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "Sovereign" },
            "properties": [{ "id": "color", "value": { "fixedColor": "purple", "mode": "fixed" } }]
          }
        ]
      },
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "list", "placement": "bottom", "showValues": "auto", "calcs": ["lastNotNull"] }
      }
    }
  ],
  "links": [],
  "version": 1
}
