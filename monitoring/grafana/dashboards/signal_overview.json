  "id": null,
  "uid": "signal-overview",
  "title": "Signal Overview",
  "description": "View active trading signals across strategies and asset classes",
  "tags": ["macro-trading", "signals", "monitoring"],
  "style": "dark",
  "timezone": "browser",
  "editable": true,
  "graphTooltip": 1,
  "fiscalYearStartMonth": 0,
  "liveNow": false,
  "refresh": "15m",
  "schemaVersion": 39,
  "time": {
    "from": "now-24h",
    "to": "now"
  },
  "timepicker": {},
  "templating": {
    "list": []
  },
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {
          "type": "grafana",
          "uid": "-- Grafana --"
        },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "panels": [
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "id": 100,
      "title": "Signal Heatmap Matrix",
      "type": "row"
    },
    {
      "id": 1,
      "title": "Signal Matrix (Asset Class x Strategy)",
      "description": "Heatmap matrix with asset classes as rows and strategies as columns. Color: green=long conviction, red=short conviction, yellow=neutral.",
      "type": "table",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 1 },
      "datasource": { "type": "postgres", "uid": "timescaledb" },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "postgres", "uid": "timescaledb" },
          "rawSql": "SELECT\n  CASE\n    WHEN strategy_id LIKE 'FX%' THEN 'FX'\n    WHEN strategy_id LIKE 'RATES%' THEN 'Rates'\n    WHEN strategy_id LIKE 'INF%' THEN 'Inflation'\n    WHEN strategy_id LIKE 'CUPOM%' THEN 'Cupom'\n    WHEN strategy_id LIKE 'SOV%' THEN 'Sovereign'\n    WHEN strategy_id LIKE 'CROSS%' THEN 'Cross-Asset'\n    ELSE 'Other'\n  END AS asset_class,\n  strategy_id,\n  ROUND(AVG(CASE WHEN direction = 'LONG' THEN confidence ELSE -confidence END)::numeric, 2) AS signal_value\nFROM strategy_signals\nWHERE generated_at >= NOW() - INTERVAL '24 hours'\nGROUP BY asset_class, strategy_id\nORDER BY asset_class, strategy_id",
          "format": "table",
          "editorMode": "code"
        }
      ],
      "transformations": [
        {
          "id": "groupBy",
          "options": {
            "fields": {
              "asset_class": {
                "aggregations": [],
                "operation": "groupby"
              },
              "strategy_id": {
                "aggregations": [],
                "operation": "groupby"
              },
              "signal_value": {
                "aggregations": ["lastNotNull"],
                "operation": "aggregate"
              }
            }
          }
        },
        {
          "id": "organize",
          "options": {
            "excludeByName": {},
            "indexByName": {},
            "renameByName": {
              "asset_class": "Asset Class",
              "strategy_id": "Strategy",
              "signal_value (lastNotNull)": "Signal Value"
            }
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "center",
            "cellOptions": {
              "type": "color-background",
              "mode": "gradient"
            },
            "inspect": false
          },
          "color": {
            "mode": "continuous-RdYlGr"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "red", "value": -1 },
              { "color": "yellow", "value": -0.3 },
              { "color": "green", "value": 0.3 }
            ]
          },
          "min": -1,
          "max": 1
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Asset Class" },
            "properties": [
              { "id": "custom.cellOptions", "value": { "type": "auto" } },
              { "id": "custom.width", "value": 150 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Strategy" },
            "properties": [
              { "id": "custom.cellOptions", "value": { "type": "auto" } },
              { "id": "custom.width", "value": 150 }
            ]
          }
        ]
      },
      "options": {
        "showHeader": true,
        "cellHeight": "md",
        "footer": { "show": false, "reducer": ["sum"], "countRows": false, "fields": "" },
        "sortBy": [{ "displayName": "Asset Class", "desc": false }]
      }
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 11 },
      "id": 101,
      "title": "Signal Strength Distribution",
      "type": "row"
    },
    {
      "id": 2,
      "title": "Average Conviction by Asset Class",
      "type": "bargauge",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 12 },
      "datasource": { "type": "postgres", "uid": "timescaledb" },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "postgres", "uid": "timescaledb" },
          "rawSql": "SELECT\n  CASE\n    WHEN strategy_id LIKE 'FX%' THEN 'FX'\n    WHEN strategy_id LIKE 'RATES%' THEN 'Rates'\n    WHEN strategy_id LIKE 'INF%' THEN 'Inflation'\n    WHEN strategy_id LIKE 'CUPOM%' THEN 'Cupom'\n    WHEN strategy_id LIKE 'SOV%' THEN 'Sovereign'\n    WHEN strategy_id LIKE 'CROSS%' THEN 'Cross-Asset'\n    ELSE 'Other'\n  END AS asset_class,\n  AVG(confidence) AS avg_conviction\nFROM strategy_signals\nWHERE generated_at >= NOW() - INTERVAL '24 hours'\nGROUP BY asset_class\nORDER BY avg_conviction DESC",
          "format": "table",
          "editorMode": "code"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "continuous-GrYlRd" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.5 },
              { "color": "red", "value": 0.8 }
            ]
          },
          "min": 0,
          "max": 1,
          "decimals": 2
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "values": true, "calcs": [], "fields": "/^avg_conviction$/" },
        "orientation": "horizontal",
        "displayMode": "gradient",
        "showUnfilled": true,
        "valueMode": "color",
        "namePlacement": "auto",
        "sizing": "auto",
        "minVizWidth": 8,
        "minVizHeight": 16
      }
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 20 },
      "id": 102,
      "title": "Signal Flip Timeline",
      "type": "row"
    },
    {
      "id": 3,
      "title": "Signal Direction Changes Over Time",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 21 },
      "datasource": { "type": "postgres", "uid": "timescaledb" },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "postgres", "uid": "timescaledb" },
          "rawSql": "SELECT\n  generated_at AS time,\n  strategy_id,\n  CASE WHEN direction = 'LONG' THEN confidence ELSE -confidence END AS signal_value\nFROM strategy_signals\nWHERE $__timeFilter(generated_at)\nORDER BY generated_at",
          "format": "table",
          "editorMode": "code"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "stepAfter",
            "barAlignment": 0,
            "lineWidth": 2,
            "fillOpacity": 10,
            "gradientMode": "none",
            "spanNulls": false,
            "insertNulls": false,
            "showPoints": "auto",
            "pointSize": 5,
            "stacking": { "mode": "none", "group": "A" },
            "axisPlacement": "auto",
            "axisLabel": "",
            "scaleDistribution": { "type": "linear" },
            "hideFrom": { "tooltip": false, "viz": false, "legend": false },
            "thresholdsStyle": { "mode": "off" }
          },
          "color": { "mode": "palette-classic" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": -0.3 },
              { "color": "green", "value": 0.3 }
            ]
          },
          "min": -1,
          "max": 1,
          "decimals": 2
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "list", "placement": "right", "showValues": "auto", "calcs": ["lastNotNull"] }
      }
    }
  ],
  "links": [],
  "version": 1
}
